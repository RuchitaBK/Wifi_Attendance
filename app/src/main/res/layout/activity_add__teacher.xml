<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruchita.wifi_attendance_management.Add_Teacher">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Enter Details "
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/Teach_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Teacher Name"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHint="#605f5f" />

    <EditText
        android:id="@+id/Teach_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Teach_Name"
        android:layout_alignLeft="@+id/Teach_Name"
        android:layout_alignRight="@+id/Teach_Name"
        android:layout_alignStart="@+id/Teach_Name"
        android:layout_below="@+id/Teach_Name"
        android:layout_marginTop="23dp"
        android:width="150dp"
        android:ems="10"
        android:hint="Teacher ID"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHint="#605f5f" />

    <EditText
        android:id="@+id/teach_un"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Teach_sub"
        android:layout_alignStart="@+id/Teach_sub"
        android:layout_below="@+id/Teach_sub"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Teacher Username"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@android:color/black"
        android:textColorHint="#605f5f" />

    <Button
        android:id="@+id/add_Data"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="14dp"
        android:background="@android:color/holo_green_light"
        android:text="ADD"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/back_button"
        android:layout_alignBottom="@+id/back_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:background="?android:attr/colorPressedHighlight"
        android:text="BACK"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/teach_un"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Teach_sub"
        android:hint="Teacher Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="#605f5f"
        android:inputType="textPersonName"
        android:layout_below="@+id/Teach_ID"
        android:layout_alignLeft="@+id/Teach_ID"
        android:layout_alignStart="@+id/Teach_ID"
        android:layout_marginTop="24dp" />
</RelativeLayout>
